width = 300
zero  = 0px
one   = 1px
percentage(a)
  unit(100 * (a / width), '%')

div.layout-300
  width:  unit(width, 'px')
  margin: zero auto

div.row
  height: 1%

div.row-end
  clear: both
  font: 1em sans-serif
  height: one
  overflow: hidden

div.col1, div.col2, div.col3, div.col4, div.col5, div.col6, div.col7, div.col8
  float: left
  margin-left: percentage(12)

div.col1:first-child, div.col2:first-child, div.col3:first-child, div.col4:first-child, div.col5:first-child, div.col6:first-child, div.col7:first-child, div.col8:first-child
  margin-left: percentage(zero)

div.col1
  width: percentage(27)

div.col2
  width: percentage(66)

div.col3
  width: percentage(105)

div.col4
  width: percentage(144)

div.col5
  width: percentage(183)

div.col6
  width: percentage(222)

div.col7
  width: percentage(261)

div.col8
  width: unit(width, 'px')

